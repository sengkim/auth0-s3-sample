@-webkit-keyframes show {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

#drop-anywhere {
  line-height: 500px;
  text-align: center;
  color: white;
  display: none;
}

#drop-anywhere::before {
  content: 'Drop to upload!';
  font-size: 30px;
  font-weight: bold
  text-align: center;
}

#drop-anywhere.show {
  -webkit-animation: show 300ms;
}
